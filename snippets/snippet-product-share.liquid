<h2 class="title font--section-heading">{{ 'products.share_this' | t }}</h2>
{% capture shareurl %}{{ shop.url }}{{ product.url }}{% endcapture %}

{% if share_twitter %}
  <a
    class="share-item twitter font--accent"
    href="https://twitter.com/intent/tweet?text=Check%20out%20this%20{% if template contains 'article' or template contains 'blog' %}blog%20post{% elsif template contains 'product' %}product{% endif %}:+{{ shareurl }}"
    rel="noreferrer"
  >
    {% render 'framework--icons', icon: 'twitter' %}
    <span>Tweet</span>
  </a>
{% endif %}

{% if share_facebook %}
  <a
    class="share-item facebook font--accent"
    href="https://www.facebook.com/sharer.php?u={{ shareurl }}&t={{ product.title }}"
    rel="noreferrer"
  >
    {% render 'framework--icons', icon: 'facebook' %}
    <span>Like</span>
  </a>
{% endif %}

{% if share_pinterest %}
  <a
    class="share-item pinterest font--accent"
    href="https://pinterest.com/pin/create/button/?url={{ shareurl }}&media={{ product.featured_media.preview_image | img_url: '2000x' }}&description={{ product.title | strip_html | escape | replace: ' ', '%20' }}"
    count-layout="none"
    rel="noreferrer"
  >
    {% render 'framework--icons', icon: 'pinterest' %}
    <span>Pin</span>
  </a>
{% endif %}